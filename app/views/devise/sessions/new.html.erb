<div class="container d-flex flex-column align-items-center">
  <h1 class="display-3 fw-bold lh-1 text-warning fst-italic mt-3">Degen<span class="text-muted">Exchange</span></h1>
  <div>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {:class => "row align-items-center g-lg-5 py-5"}) do |f| %>
      <div class="col-lg-7 text-center text-lg-start d-flex flex-column align-items-center">
        <%= image_tag "Bitcoin_Monochromatic.png" %>  
        <p class="col-lg-10 fs-4 mb-4">Buy, trade, and hold 1000+ stocks with the worldâ€™s most powerful exchange. Trading platform for all the apes.</p>
        <%= link_to "Sign Up", new_user_registration_path,  class:"btn btn-warning btn-lg w-25 text-white" %>
      </div>
      <div class="col-md-10 mx-auto col-lg-5">
      <h2 class="lh-1 mb-5 mt-3 text-center fw-bold text-secondary">Log In</span></h2>
        <form class="p-4 p-md-5 border rounded-3 bg-light">
          <div class="form-floating mb-3">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", id:"floatingInput", placeholder:"name@example.com"%>
            <label for="floatingInput">Email address</label>
          </div>
          <div class="form-floating mb-2">
            <%= f.password_field :password, autocomplete: "current-password", class:"form-control", id:"floatingPassword", placeholder:"Password" %>
            <label for="floatingPassword">Password</label>
          </div>
          <div class="checkbox mb-3 d-flex align-items-center m-2">
            <%= f.check_box :remember_me, class: "rounded-circle me-1" %>
            <label>
              Remember me
            </label>
          </div>
          <div class="d-flex flex-column align-items-center">
                <%= f.submit "Log in",  class:"w-50 btn btn-lg btn-primary", type:"submit" %>
            <%= link_to "Forgot password?", new_user_password_path, method: :delete, class:"text-decoration-none mt-2 link-primary" %>
          </div>
          <hr class="mt-3 mb-1">
          <small class="text-muted">By clicking Sign in, you agree to the terms of use.</small>
        </form>
      </div>
    <% end %>
  </div>

</div>

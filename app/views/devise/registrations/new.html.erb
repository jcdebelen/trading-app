
<div class="w-100 h-75 d-flex flex-column justify-content-evenly align-items-center">
  <h1 class="display-3 fw-bold lh-1 mb-3 text-warning fst-italic mt-3">Degen<span class="text-muted">Exchange</span></h1>
  <div class="container">
  <%= render "devise/shared/error_messages", resource: resource %>
    <div class="card text-black p-md-5" style="border-radius: 25px;">
      <div class="row justify-content-center">
        <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">
          <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Sign up</p>
              <%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:class => "mx-1 mx-md-4 d-flex flex-column mb-2"}) do |f| %>
              <div class="form-outline flex-fill mb-0">
                <label class="form-label" for="form3Example3c">Email</label>
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", class:"form-control mb-1" %>
              </div>
              <div class="form-outline flex-fill mb-0">
                <label class="form-label" for="form3Example4c">Password</label>
                <%= f.password_field :password, autocomplete: "new-password", class: "form-control mb-1" %>
              </div>
              <div class="form-outline flex-fill mb-0">
                <label class="form-label" for="form3Example4cd">Repeat your password</label>
                  <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control mb-1" %>
              </div>
              <div class="form-check d-flex justify-content-center mb-0 mt-1">
                <input class="form-check-input me-2" type="checkbox" value="" id="form2Example3c" required/>
                <label class="form-check-label" for="form2Example3">
                  I agree all statements in <a href="#!">Terms of service</a>
                </label>
              </div>
            <div class="d-flex justify-content-center mx-4 mb-3 mt-3">
              <%= f.submit "Register", class:"btn btn-primary w-50" %>
            </div>
            <% end %>
        </div>
        <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center justify-content-center order-1 order-lg-2">
          <%= image_tag "Money motivation _Isometric.png", class: "img-fluid" %>
        </div>
      </div>

    </div>
  </div>

</div>

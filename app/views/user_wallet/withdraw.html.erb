<%= form_with url: '/user_wallet', method: :post, data: {turbo: false} do |form| %>
  <section class="vh-100" style="background-color: #eee;">
    <div class="container h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-lg-12 col-xl-11">
          <div class="card text-black" style="border-radius: 25px;">
            <div class="card-body p-md-5">
              <div class="row justify-content-center">
                <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">
                  <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Withdraw</p>
                  <form class="mx-1 mx-md-4">
                    <div class="d-flex flex-row align-items-center mb-4">
                      <i class="fa fa-money fa-lg me-3 fa-fw"></i>
                      <div class="form-outline flex-fill mb-0">
                        <b>$<%= current_user.balance %></b><br>
                        <label class="form-label" for="form3Example3c">Current Balance</label>
                      </div>
                    </div>
                    <div class="d-flex flex-row align-items-center mb-4">
                      <div class="form-outline flex-fill mb-0">
                        <%= form.number_field :withdraw, in: 1..current_user.balance, step: 0.01, class: "form-control" %>
                        <label class="form-label" for="form3Example3c">Enter Amount to Withdraw</label>
                      </div>
                    </div>
                    <div class="form-check d-flex justify-content-center mb-5">
                      <input class="form-check-input me-2" type="checkbox" value="" id="form2Example3c" required/>
                      <label class="form-check-label" for="form2Example3">
                        I agree all statements in <a href="#!">Terms of service</a>
                      </label>
                    </div>
                    <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                      <%= form.submit 'withdraw', class:"btn btn-primary btn-lg" %>
                    </div>
                  </form>
                </div>
                <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">
                  <%= image_tag "undraw_transfer_money_re_6o1h.svg", class: "img-fluid" %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
<% end %>

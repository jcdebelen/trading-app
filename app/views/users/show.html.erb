

<div class="container">
  <h1 class="display-4 mt-3">User Profile</h1>
  <table class="table table-bordered w-auto mt-3">
      <tr>
          <td>User ID</td>
          <td><%= @user.id %></td>
      </tr>
      <tr>
          <td>Email Address</td>
          <td><%= @user.email %></td>
      </tr>
      <tr>
          <td>Approved?</td>
          <td><%= @user.approved? %></td>
      </tr>
      <tr>
          <td>Change Approval Status</td>
          <td><%= link_to 'Edit', edit_user_path(@user.id), class: "btn btn-outline-warning" %></td>
      </tr>
      <tr>
          <td>Delete User</td>
          <td><%= button_to "Delete", user_path, method: :delete, class: "btn btn-outline-danger"%></td>
      </tr>
  </table>

  <h2 class="display-6">Transaction List</h2>
  <% if @user_history.present? %>
  <table class="table table-striped">
  <thead>
  <th>Transaction</th>
  <th>Stock Symbol</th>
  <th>Amount</th>
  <th>Date</th>
  </thead>
  <tbody>
      <% @user_history.each do |history| %>
      <tr>
      
        <td> <%= history.status.titleize %></td>
        <td>
        <% if !history.symbol.nil? %>
          <%= history.symbol %><br>
        <% end %>
        </td>
        <td>$<%= history.amount %></td>
        <td><%= history.created_at %><br></td>
  </tr>
    <% end %>
    </tbody>
  </table>
  <% else %>
    <p>No Transactions Yet</p>
  <% end %>
<%= link_to '<Back to Dashboard', users_path, class: "mt-5" %>

</div>
